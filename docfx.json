{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "docs/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "src": "docs",
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "resources/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Snake#",
      "_appTitle": "Snake#",
      "_gitContribute": {
        "repo": "https://github.com/thatfloflo/SnakeSharp",
        "branch": "main"
      },
      "_enableSearch": true,
      "pdf": false
    }
  }
}